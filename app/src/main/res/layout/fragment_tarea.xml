<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weMee7.activities.TareaFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTareaBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <EditText
        android:id="@+id/editTextTaskTitle"
        android:layout_width="276dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:hint="Enter task title"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTareaDerecha"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/guidelineTareaLeft"
        app:layout_constraintTop_toTopOf="@+id/guidelineTareaTop" />

    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="258dp"
        android:layout_height="32dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Task Description"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTareaDerecha"
        app:layout_constraintStart_toStartOf="@+id/guidelineTareaLeft"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskTitle" />

    <EditText
        android:id="@+id/editTextTaskDescription"
        android:layout_width="256dp"
        android:layout_height="72dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:hint="Enter task description"
        android:inputType="textMultiLine"
        android:lines="4"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTareaDerecha"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/guidelineTareaLeft"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskDescription" />

    <TextView
        android:id="@+id/editTextAssignee"
        android:layout_width="258dp"
        android:layout_height="32dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:hint="Seleccione un asignado"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTareaDerecha"
        app:layout_constraintStart_toStartOf="@+id/guidelineTareaLeft"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskDescription" />

    <Spinner
        android:id="@+id/SpinnerTarea"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:prompt="Selecciona un asignado"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTareaDerecha"
        app:layout_constraintStart_toStartOf="@+id/guidelineTareaLeft"
        app:layout_constraintTop_toBottomOf="@+id/editTextAssignee" />


    <!-- Boton para crear la tarea -->

    <Button
        android:id="@+id/buttonCreateTask"
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/default_round_button"
        android:backgroundTint="@color/medium"
        android:text="Crear Tarea"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTareaBot"
        app:layout_constraintEnd_toStartOf="@+id/guidelineTareaDerecha"
        app:layout_constraintStart_toStartOf="@+id/guidelineTareaLeft"
        app:layout_constraintTop_toBottomOf="@+id/SpinnerTarea"
        app:layout_constraintVertical_bias="0.859" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTareaTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTareaDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTareaLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />
</androidx.constraintlayout.widget.ConstraintLayout>