<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.weMee7.activities.MenuActivity">

    <ImageView
        android:id="@+id/ivHomeFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/tvHomeUsuario"
        app:layout_constraintBottom_toBottomOf="@id/tvHomeUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvHomeUsuario"
        app:srcCompat="@drawable/person_fill0_wght400_grad0_opsz24"
        app:tint="@color/medium"/>

    <TextView
        android:id="@+id/tvHomeUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Carlos Blanco"
        android:textColor="@color/dark"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvHomeEventos"
        app:layout_constraintStart_toEndOf="@id/ivHomeFoto"
        app:layout_constraintEnd_toEndOf="parent"
         />
    <TextView
        android:id="@+id/tvHomeEventos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Mis eventos"
        android:textColor="@color/dark"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/tvHomeUsuario"
        app:layout_constraintBottom_toTopOf="@id/rvHomeLista"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHomeLista"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvHomeEventos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageButton
        android:id="@+id/boton_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add_fill0_wght400_grad0_opsz24"
        app:tint="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>
