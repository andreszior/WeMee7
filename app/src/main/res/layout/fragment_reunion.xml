<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="8dp"
    tools:context="com.example.weMee7.activities.ReunionFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glReunionLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glReunionRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glReunionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glReunionBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/tvNombreReunion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Nombre de la reunion"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/glReunionLeft"
        app:layout_constraintEnd_toEndOf="@id/glReunionRight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/glReunionTitle"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/glReunionLeft"
        app:layout_constraintEnd_toEndOf="@id/glReunionRight"
        app:layout_constraintTop_toTopOf="@id/glReunionTitle"
        app:layout_constraintBottom_toTopOf="@id/glReunionBottom">
        <LinearLayout
            android:id="@+id/llReunionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/llReunionEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_margin="2dp">
                <TextView
                    android:id="@+id/tvReunionDescrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion de la reunion que puede ser mas o menos larga"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/icon_location"
                        app:tint="@color/dark" />
                    <TextView
                        android:id="@+id/tvReunionLugar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:text="Lugar"
                        android:layout_gravity="center"
                        android:textColor="@color/dark" />
                    <ImageButton
                        android:id="@+id/btReunionEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_edit"
                        android:layout_gravity="center|end"
                        android:layout_margin="3dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llReunionFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/icon_time"
                        android:layout_margin="5dp"
                        android:layout_gravity="top"
                        app:tint="@color/dark" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/tvReunionFecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha"
                            android:textColor="@color/dark" />
                        <TextView
                            android:id="@+id/tvReunionHora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hora"
                            android:textColor="@color/dark" />
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/btReunionDelete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_delete"
                        android:layout_gravity="center|end"
                        android:layout_margin="3dp"
                        app:tint="@color/avatar_rojo"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llReunionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llReunionInfo"
            app:layout_constraintBottom_toTopOf="@id/llMostrarInvitados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/btReunionUndo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/icon_undo"
                android:background="@color/transparent" />
            <Button
                android:id="@+id/btReunionGuardar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/medium"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:text="@string/bt_guardar" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llMostrarInvitados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/llReunionEdit"
            app:layout_constraintBottom_toTopOf="@id/llMostrarTareas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/boton_selector"
            android:backgroundTint="@color/medium"
            android:layout_marginTop="10dp"
            android:padding="5dp">
            <ImageView
                android:id="@+id/ivInvitadosBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                app:tint="@color/white"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:paddingStart="20dp"
                android:text="@string/tag_asistentes"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/ivInvitadosIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                android:rotation="180"
                app:tint="@color/white"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llMostrarTareas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/llMostrarInvitados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_rectangle">
            <LinearLayout
                android:id="@+id/btMostrarTareas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:paddingStart="20dp"
                    android:text="@string/tag_tareas"/>
                <ImageView
                    android:id="@+id/ivTareasShow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/arrow_up"
                    android:rotation="180"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/flTareas"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReunionTareas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />
                <ImageButton
                    android:id="@+id/boton_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/medium"
                    app:srcCompat="@drawable/icon_add"
                    app:tint="@color/white" />
            </FrameLayout>
        </LinearLayout>
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/reunionContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/llMostrarTareas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
