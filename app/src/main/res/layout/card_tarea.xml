<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tarea_fondo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/light"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glTareaLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glTareaRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"/>
        <ImageView
            android:id="@+id/ivEncargadoIcono"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/llTareaInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/glTareaLeft"
            android:background="@drawable/avatar_form"
            android:backgroundTint="@color/medium"/>
        <LinearLayout
            android:id="@+id/llTareaInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivEncargadoIcono"
            app:layout_constraintStart_toStartOf="@id/glTareaLeft"
            app:layout_constraintEnd_toStartOf="@id/glTareaRight">
            <TextView
                android:id="@+id/tvTareaTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/scrollHText" />
            <TextView
                android:id="@+id/tvTareaFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingStart="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvTareaGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivEncargadoIcono"
            app:layout_constraintStart_toStartOf="@id/glTareaRight"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:padding="5dp" />
        <TextView
            android:id="@+id/tvEncargadoNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/llTareaInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5dp" />
            <CheckBox
                android:id="@+id/checkRealizada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/glTareaRight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                android:padding="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>