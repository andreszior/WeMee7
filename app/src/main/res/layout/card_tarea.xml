<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apptint="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/elemet_menu1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardBackgroundColor="@color/light"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            card_view:tint="@color/dark" />

        <TextView
            android:id="@+id/tarea_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/item_image1"
            android:layout_toRightOf="@+id/item_image1"
            android:text="Accion"
            android:textAllCaps="true"
            android:textColor="@color/dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_tarea_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_fecha_tarea"
            android:layout_marginStart="15dp"


            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/item_image1"
            android:text="Realizada por"
            android:textColor="@color/dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_fecha_tarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tarea_title1"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/item_image1"
            android:layout_toRightOf="@+id/item_image1"
            android:text="Fecha"
            android:textColor="@color/dark"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>