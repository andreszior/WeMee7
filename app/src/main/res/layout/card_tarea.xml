<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apptint="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/elemet_menu1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardBackgroundColor="@color/light"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light"
        android:padding="10dp">

        <!-- Imagen en la parte izquierda -->
        <ImageView
            android:id="@+id/item_image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            card_view:tint="@color/dark" />

        <!-- Título de la tarea al lado de la imagen -->
        <TextView
            android:id="@+id/tarea_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_image1"
            android:layout_toEndOf="@id/item_image1"
            android:layout_toRightOf="@id/item_image1"
            android:text="Accion"
            android:textAllCaps="true"
            android:textColor="@color/dark"
            android:textSize="18sp" />

        <!-- Fecha de la tarea debajo del título -->

        <!-- Usuario de la tarea debajo de la fecha -->

        <!-- Checkbox en la parte derecha -->

        <!-- Botón debajo del Checkbox -->

        <ImageView
            android:id="@+id/ivHomeFoto"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="23dp"
            android:backgroundTint="@color/medium"
            android:src="@drawable/euro_icon" />

        <TextView
            android:id="@+id/item_precio_tarea"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tarea_title1"
            android:layout_alignLeft="@id/tarea_title1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="122dp"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/ivHomeFoto"
            android:text="Precio"
            android:textColor="@color/dark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_tarea_usuario"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_precio_tarea"
            android:layout_alignStart="@id/item_precio_tarea"
            android:layout_alignLeft="@id/item_precio_tarea"
            android:layout_marginStart="-155dp"
            android:layout_marginLeft="-155dp"
            android:layout_marginTop="28dp"
            android:text="Encargad@: "
            android:textColor="@color/dark"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_image1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="26dp"
            android:text="Realizada" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>