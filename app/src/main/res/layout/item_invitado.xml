<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llInvitadoFondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivInvitadoEstado"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_creator"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/avatar_azul"/>
        <ImageView
            android:id="@+id/ivInvitadoIcono"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/avatar_form"
            android:backgroundTint="@color/medium"/>
        <TextView
            android:id="@+id/tvInvitadoNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:text="@string/tag_creador"
            android:background="@color/transparent"
            android:padding="5dp" />
        <Button
            android:id="@+id/btInvitadoConfirmar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/boton_selector"
            android:backgroundTint="@color/medium"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="@string/bt_ok"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/avatar_azul"/>
</LinearLayout>