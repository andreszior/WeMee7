<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbkg">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_horizontal_rule"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        app:tint="@color/medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textAlignment="viewStart"
            android:text="@string/tag_opcion"
            android:padding="8dp"
            android:textColor="@color/dark"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="25sp" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nav_close"
            android:layout_gravity="end|top"
            android:id="@+id/cancelButton"
            app:tint="@color/medium"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPrimeraOpcion"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_add"
            app:tint="@color/medium"/>
        <TextView
            android:id="@+id/tvPrimeraOpcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:layout_marginStart="30dp"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llSegundaOpcion"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_reunion"
            app:tint="@color/medium"/>
        <TextView
            android:id="@+id/tvSegundaOpcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:layout_marginStart="30dp"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>