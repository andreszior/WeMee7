<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:gravity="bottom"
    android:padding="16dp"
    android:background="@color/medium"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:id="@+id/ivHeaderFoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/avatar_form"
        android:src="@drawable/person_fill0_wght400_grad0_opsz24"
        />
    <TextView
        android:id="@+id/tvHeaderNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carlos Blanco"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvHeaderCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carlostrubia@gmail.com"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>