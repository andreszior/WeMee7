<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="botonGoogle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="bordered_layout">
        <item name="android:padding">3dp</item>
    </style>
    <style name="titulo_boton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="subtitulo_boton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/avatar_gris</item>
        <item name="android:textAlignment">gravity</item>
    </style>
    <style name="scrollHText">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="editable">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>